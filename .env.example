# ==========================================
# HABAL RIDE-HAILING PLATFORM - ENVIRONMENT VARIABLES
# ==========================================
# 
# ⚠️  SECURITY WARNING:
# - NEVER commit the actual .env file to version control
# - Keep all API keys and secrets private
# - Use different values for development, staging, and production
# - Rotate keys regularly and after any security incident
# - Use Firebase App Check for additional API security
# 
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env.local for local development
# 2. Replace all placeholder values with your actual credentials
# 3. Get Firebase credentials from: https://console.firebase.google.com/
#    - Go to Project Settings > General > Your apps
# 4. For production, set these as environment variables in your hosting platform
# 
# ==========================================

# ==========================================
# FIREBASE CONFIGURATION
# ==========================================
# Core Firebase services for authentication, database, and storage
# Get these from Firebase Console > Project Settings

VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ==========================================
# FIREBASE CLOUD MESSAGING (FCM)
# ==========================================
# For push notifications to users
# Get VAPID key from: Firebase Console > Project Settings > Cloud Messaging

VITE_FIREBASE_VAPID_KEY=your_vapid_key_here

# ==========================================
# RADAR.COM API
# ==========================================
# For location services, geocoding, and route visualization
# Get from: https://radar.com/dashboard
# Radar provides better coverage and features for ride-hailing apps

VITE_RADAR_API_KEY=your_radar_api_key_here

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# App Environment (development, staging, production)
VITE_APP_ENV=development

# App Name and Version
VITE_APP_NAME=Habal
VITE_APP_VERSION=1.0.0

# App URL (used for deep linking and redirects)
# For development, use http://localhost:5173 (Vite default)
# For production, use your actual domain (e.g., https://habal.app)
VITE_APP_URL=https://habal.app

# ==========================================
# SECURITY CONFIGURATION
# ==========================================

# Enable security features
VITE_ENABLE_CSRF_PROTECTION=true
VITE_ENABLE_RATE_LIMITING=true
VITE_ENABLE_XSS_PROTECTION=true

# Rate limiting (requests per minute)
VITE_RATE_LIMIT_REQUESTS=60
VITE_RATE_LIMIT_WINDOW=60000

# Session timeout (milliseconds)
VITE_SESSION_TIMEOUT=3600000

# Content Security Policy Mode (report-only or enforce)
VITE_CSP_MODE=enforce

# ==========================================
# PAYMENT INTEGRATION (Optional)
# ==========================================
# Add your payment provider keys when ready to integrate

# PayPal
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id
VITE_PAYPAL_MODE=sandbox

# Stripe (alternative)
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# ==========================================
# SMS NOTIFICATION SERVICE (Optional)
# ==========================================
# For SMS notifications to users
# Example: Twilio, Vonage, etc.

VITE_SMS_SERVICE_PROVIDER=twilio
VITE_SMS_API_KEY=your_sms_api_key
VITE_SMS_API_SECRET=your_sms_api_secret
VITE_SMS_FROM_NUMBER=+1234567890

# ==========================================
# ANALYTICS & MONITORING
# ==========================================

# Firebase Analytics (already included with Firebase)
VITE_ENABLE_ANALYTICS=true

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Error Tracking (e.g., Sentry)
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_SENTRY_ENVIRONMENT=development

# ==========================================
# FEATURE FLAGS
# ==========================================
# Toggle features on/off without code changes

VITE_ENABLE_DRIVER_REGISTRATION=true
VITE_ENABLE_PASSENGER_REGISTRATION=true
VITE_ENABLE_RIDE_SHARING=false
VITE_ENABLE_SCHEDULED_RIDES=false
VITE_ENABLE_IN_APP_CHAT=false
VITE_ENABLE_EMERGENCY_SOS=true
VITE_ENABLE_REFERRAL_PROGRAM=false

# ==========================================
# RIDE CONFIGURATION
# ==========================================

# Default pricing (can be overridden by admin)
VITE_BASE_FARE=50.00
VITE_PER_KM_RATE=15.00
VITE_MINIMUM_FARE=50.00
VITE_CURRENCY=PHP
VITE_CURRENCY_SYMBOL=₱

# Ride matching radius (meters)
VITE_DRIVER_SEARCH_RADIUS=5000

# Maximum waiting time for driver (minutes)
VITE_MAX_DRIVER_WAIT_TIME=10

# ==========================================
# GEOLOCATION CONFIGURATION
# ==========================================

# Location update interval (milliseconds)
VITE_LOCATION_UPDATE_INTERVAL=5000

# Location accuracy (meters)
VITE_LOCATION_MIN_ACCURACY=100

# Service area geofencing (Silago, Southern Leyte)
VITE_SERVICE_AREA_LAT=10.5383
VITE_SERVICE_AREA_LNG=125.2572
VITE_SERVICE_AREA_RADIUS=10000

# ==========================================
# DEVELOPMENT TOOLS
# ==========================================

# Enable debug logs in console
VITE_ENABLE_DEBUG_LOGS=true

# Enable Redux DevTools
VITE_ENABLE_REDUX_DEVTOOLS=true

# Mock location for testing
VITE_MOCK_LOCATION=false
VITE_MOCK_LAT=10.5383
VITE_MOCK_LNG=125.2572

# ==========================================
# LEGAL & COMPLIANCE
# ==========================================

# Links to legal documents
VITE_PRIVACY_POLICY_URL=https://habal.app/privacy
VITE_TERMS_OF_SERVICE_URL=https://habal.app/terms
VITE_SUPPORT_EMAIL=support@habal.app
VITE_SUPPORT_PHONE=+639123456789

# ==========================================
# END OF CONFIGURATION
# ==========================================
